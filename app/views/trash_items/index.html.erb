<p id="notice"><%= notice %></p>

<h1>Trash Items</h1>

<table>
  <thead>
    <tr>
      <th>Time thrown</th>
      <th>Correctness</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trash_items.each do |trash_item| %>
      <tr>
        <td><%= trash_item.time_thrown %></td>
        <td><%= trash_item.correctness %></td>
        <td><%= link_to 'Show', trash_item %></td>
        <td><%= link_to 'Edit', edit_trash_item_path(trash_item) %></td>
        <td><%= link_to 'Destroy', trash_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

